{% extends "ThiktakCoreBundle::layout.html.twig" %}

{% block body %}
<section>
  <header>
    <hgroup>
      <h1>Notifications</h1>
    </hgroup>
  </header>

  <article class="wbox">
    <ul>
      {% for entity in entities %}
      <li>
        <span style="display: inline-block; width: 120px; text-align: right; font-size: .75em; opacity: .5; padding-right: 10px;">
          {{ entity.dateCreated|date('Y-m-d H:i') }}
        </span>
        {{ notify(entity)|raw }}
      </li>
      {% endfor %}
    </ul>
  </article>
</section>
{% endblock %}