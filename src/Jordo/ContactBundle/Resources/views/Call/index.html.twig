{% extends "ThiktakCoreBundle::layout.html.twig" %}

{% block menu %}
  {% render "JordoContactBundle:Contact:menu" %}
{% endblock %}

{% block body %}
<section>
  <header>
    <hgroup>
      <h1>Appels</h1>
      <h2>Liste</h2>
    </hgroup>
    <aside>
      <ul>
        <li><a href="{{ path('contact_new') }}"><i class="icon-plus"></i></a></li>
      </ul>
    </aside>
  </header>

  <article class="wbox">
    <ul class="ul-items">
      <li>
        <a href="{{ path('call_new') }}" class="btn btn-large block">
          <i class="icon-plus"></i><br />
          Entrer un appel
        </a>
      </li>
      <li>
        <a href="{{ path('contact') }}" class="btn btn-large block">
          <i class="icon-list"></i><br />
          Voir tous les prospects
        </a>
      </li>
    </ul>
  </article>


  <article class="wbox">
    <table class="table">
        <thead>
            <tr>
                <th>Contact</th>
                <th>Commercial</th>
                <th>Par</th>
                <th>le</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                  <a href="{{ path('contact_show', { 'id': entity.info.contact.id }) }}">
                    {{ entity.info.contact }}
                  </a>
                </td>
                <td>
                  <a href="{{ path('user_show', { 'id': entity.addedBy.id }) }}">
                    {{ entity.addedBy }}
                  </a>
                </td>
                <td>{{ entity.info }}</td>
                <td>{{ entity.dateStart|date('Y-m-d H:i:s') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}