{% extends "ThiktakCoreBundle::layout.html.twig" %}

{% block menu %}

{% endblock %}

{% block body %}
<section>
  <header>
    <hgroup>
      <h1>Raports</h1>
      <h2>Liste des raports</h2>
    </hgroup>
    <aside>
      <ul>
        <li><a href="{{ path('project_new') }}"><i class="icon-plus"></i></a></li>
      </ul>
    </aside>
  </header>

  <article class="wbox">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('report_ca_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.type }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('report_ca_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('report_ca_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('report_ca_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
  </article>
</section>
{% endblock %}
