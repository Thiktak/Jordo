<h1>ReportItem</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Object</th>
            <td>{{ entity.object }}</td>
        </tr>
        <tr>
            <th>Objectid</th>
            <td>{{ entity.objectId }}</td>
        </tr>
        <tr>
            <th>Checked</th>
            <td>{{ entity.checked }}</td>
        </tr>
        <tr>
            <th>Comment</th>
            <td>{{ entity.comment }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('report_item') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('report_item_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('report_item_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
