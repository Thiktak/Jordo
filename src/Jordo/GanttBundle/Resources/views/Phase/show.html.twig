{% extends "ThiktakCoreBundle::layout.html.twig" %}

{% block body %}
<section>
  <header>
    <hgroup>
      <h1>Gantt</h1>
      <h2>Nouveau</h2>
    </hgroup>
    <aside>
      <ul>
        <li><a href="{{ path('gantt') }}"><i class="icon-list"></i></a></li>
        <li><a href="{{ path('gantt_phase_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a></li>
      </ul>
    </aside>
  </header>

  <article class="wbox"><h1>Phase</h1>
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Iorder</th>
                <td>{{ entity.iorder }}</td>
            </tr>
            <tr>
                <th>Numberdaysafter</th>
                <td>{{ entity.numberDaysAfter }}</td>
            </tr>
            <tr>
                <th>Numberdays</th>
                <td>{{ entity.numberDays }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>Numberjeh</th>
                <td>{{ entity.numberJeh }}</td>
            </tr>
        </tbody>
    </table>
  </article>
</section>
{% endblock %}