{% extends "ThiktakCoreBundle::layout.html.twig" %}

{% block body %}
<section>
  <header>
    <hgroup>
      <h1>Documents</h1>
      <h2>Nouveau document</h2>
    </hgroup>
    <aside>
      <ul>
        <li><a href="{{ path('document') }}"><i class="icon-list"></i></a></li>
        <li><a href="{{ path('document_new') }}"><i class="icon-plus"></i></a></li>
      </ul>
    </aside>
  </header>

  <article class="wbox">
    <form action="{{ path('document_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </form>
  </article>
</section>
{% endblock %}