{% extends "ThiktakCoreBundle::layout.html.twig" %}

{% block menu %}
  {% render "JordoUserBundle:User:menu" %}
{% endblock %}

{% block body %}
<section>
  <header>
    <hgroup>
      <h1><a href="{{ path('user') }}">Users</a></h1>
      <h2><a href="{{ path('user_subscription') }}">Papiers</a></h2>
      <h3>{{ entity.type.title }} - {{ entity.user }} - {{ entity.year }}</h3>
    </hgroup>
    <aside>
      <ul>
        <li>
          <a href="{{ path('user_subscription') }}"><i class="icon-list"></i></a>
        </li>
      </ul>
    </aside>
  </header>

  <article class="wbox">
    <form action="{{ path('user_subscription_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </form>
  </article>
</section>
{% endblock %}