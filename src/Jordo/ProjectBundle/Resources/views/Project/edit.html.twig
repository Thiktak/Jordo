{% extends "ThiktakCoreBundle::layout.html.twig" %}

{% block body %}
<section>
  <header>
    <hgroup>
      <h1><a href="{{ path('project') }}">Projets</a></h1>
      <h2><a href="{{ path('project_show', {id: entity.id}) }}">{{ entity }}</a></h2>
    </hgroup>
    <aside>
      <ul>
        <li>
          <a href="{{ path('project') }}"><i class="icon-list"></i></a>
        </li>
        <li>
          <a href="{{ path('project_new') }}"><i class="icon-plus"></i></a>
        </li>
      </ul>
    </aside>
  </header>

  <article class="wbox">
    <form action="{{ path('project_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </form>
  </article>
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/thiktakcore/js/jquery-ui-autocomplete.js') }}"></script>
    <script src="{{ asset('bundles/thiktakcore/js/jquery.select-to-autocomplete.min.js') }}"></script>
    <script>
      $(document).ready(function() {
        $('select[data-autocomplete]').selectToAutocomplete();
      });
    </script>
{% endblock %}