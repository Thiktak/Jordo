{% extends "ThiktakCoreBundle::layout.html.twig" %}

{% block body %}
<section>
  <header>
    <hgroup>
      <h1>Projets</h1>
      <h2>Creation</h2>
    </hgroup>
    <aside>
      <ul>
        <li>
          <a href="{{ path('project') }}"><i class="icon-list"></i></a>
        </li>
        <li>
          <a href="{{ path('project_new') }}"><i class="icon-plus"></i></a>
        </li>
      </ul>
    </aside>
  </header>

  <article class="wbox">
    <form action="{{ path('project_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <button type="submit">Create</button>
        </p>
    </form>
  </article>
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/thiktakcore/js/jquery-ui-autocomplete.js') }}"></script>
    <script src="{{ asset('bundles/thiktakcore/js/jquery.select-to-autocomplete.min.js') }}"></script>
    <script>
      $(document).ready(function() {
        $('select[data-autocomplete]').selectToAutocomplete();
      });
    </script>
{% endblock %}