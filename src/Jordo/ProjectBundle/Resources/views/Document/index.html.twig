{% extends "ThiktakCoreBundle::layout.html.twig" %}

{% block menu %}
  {% render "JordoProjectBundle:Project:menu" %}
{% endblock %}

{% block body %}
<section>
  <header>
    <hgroup>
      <h1><a href="{{ path('project') }}">Projets</a></h1>
      <h2>Documents</h2>
    </hgroup>
  </header>

  <article class="wbox">
    <table class="table">
      <thead>
          <tr>
              <th>Id</th>
              <th>Title</th>
              <th>Datecreated</th>
              <th>Dateadded</th>
              <th>Path</th>
              <th>Actions</th>
          </tr>
      </thead>
      <tbody>
      {% for entity in entities %}
          <tr>
              <td><a href="{{ path('project_document_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
              <td>{{ entity.title }}</td>
              <td>{% if entity.dateCreated %}{{ entity.dateCreated|printDate }}{% endif %}</td>
              <td>{% if entity.dateAdded %}{{ entity.dateAdded|printDate }}{% endif %}</td>
              <td>{{ entity.path }}</td>
              <td>
                  <ul>
                      <li>
                          <a href="{{ path('project_document_show', { 'id': entity.id }) }}">show</a>
                      </li>
                      <li>
                          <a href="{{ path('project_document_edit', { 'id': entity.id }) }}">edit</a>
                      </li>
                  </ul>
              </td>
          </tr>
      {% endfor %}
      </tbody>
    </table>
  </article>
</section>
{% endblock %}