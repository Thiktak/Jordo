{% extends "ThiktakCoreBundle::layout.html.twig" %}

{% block menu %}
  {% render "JordoCalendarBundle:Index:menu" %}
{% endblock %}

{% block body %}
<section>
  <header>
    <hgroup>
      <h1><a href="{{ path('calendar') }}">Calendrier</a></h1>
      <h2>Ev√©nement</h2>
    </hgroup>
    <aside>
      <ul>
        <li><a href="{{ path('calendar_event_new') }}"><i class="icon-plus"></i></a></li>
      </ul>
    </aside>
  </header>

  <article class="wbox">
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Datecreated</th>
            <th>Dateupdated</th>
            <th>Datestart</th>
            <th>Dateend</th>
            <th>Title</th>
            <th>Description</th>
            <th>Istodo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('calendar_event_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.dateUpdated %}{{ entity.dateUpdated|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.dateStart %}{{ entity.dateStart|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.dateEnd %}{{ entity.dateEnd|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.isTodo }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('calendar_event_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('calendar_event_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('calendar_event_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
    </article>
</section>
{% endblock %}