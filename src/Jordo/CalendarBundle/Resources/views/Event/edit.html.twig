{% extends "ThiktakCoreBundle::layout.html.twig" %}

{% block menu %}
  {% render "JordoCalendarBundle:Index:menu" %}
{% endblock %}

{% block body %}
<section>
  <header>
    <hgroup>
      <h1>Calendrier</h1>
      <h2>Edition - {{ entity }}</h2>
    </hgroup>
    <aside>
      <ul>
        <li><a href="{{ path('calendar_event_new') }}"><i class="icon-plus"></i></a></li>
      </ul>
    </aside>
  </header>

  <article class="wbox">

    <form action="{{ path('calendar_event_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>
  </article>
</section>
{% endblock %}